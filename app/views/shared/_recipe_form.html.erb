<%= form_for(@recipe) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :method %>
    <%= f.text_area :method, placeholder: "I'm hungry..." %>

    <%= f.submit "Stir it up!", class: "btn btn-large btn-primary" %>
<% end %>