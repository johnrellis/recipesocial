<%= form_for(@recipe) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name%>
    <%= f.text_field :name, placeholder: "Name your culinary creation....", value: @recipe.name  %>

    <%= f.label :gluten_free, class: "checkbox inline"%>
    <%= f.check_box :gluten_free, value: @recipe.gluten_free  %>
    <br>
    <br>

    <%= f.label :method %>
    <%= f.text_area :method, placeholder: "I'm hungry...", value: @recipe.method %>

    <%= f.submit "Stir it up!", class: "btn btn-large btn-primary" %>
<% end %>

<script type="text/javascript">
    $('#recipe_method').wysihtml5();
</script>