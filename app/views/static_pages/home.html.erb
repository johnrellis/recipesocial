<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info', user_info: current_user %>
    </section>
    <section>
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>
  <div class="span8">
    <% if @microposts %>
        <h3>Microposts</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
    <% end %>
  </div>
  <div class="span12">
    <% if @recipes %>
        <h3>Recipes</h3>
        <ol class="microposts">
          <%= render @recipes %>
        </ol>
    <% end %>
  </div>
</div>