<% provide(:title, @recipe.name) %>
<h1><%= @recipe.name %></h1>

<div class="row">
  <div class="span8 offset3">
    <% if current_user?(@recipe.user) %>
        <div>
          <%= link_to "edit recipe |", edit_recipe_path %>
          <%= link_to "delete recipe", @recipe, method: :delete,
                      data: {confirm: "You sure?"},
                      title: @recipe.name %>
        </div>
    <% end %>
    <%= @recipe.method.html_safe %>
    <% if current_user?(@recipe.user) %>
        <div>
          <%= link_to "edit recipe |", edit_recipe_path %>
          <%= link_to "delete recipe", @recipe, method: :delete,
                      data: {confirm: "You sure?"},
                      title: @recipe.name %>
        </div>
    <% end %>
  </div>
</div>