<li>
  <a href="<%= user_path recipe.user %>">
    <%= gravatar_for recipe.user, size: 80 %>
  </a>
  <h5><%= link_to recipe.user.name, user_path(recipe.user) %></h5>
  <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
  <span class="content">
    <%= truncate_html(recipe.method, length: 20).html_safe %>
    <br>
    <%= link_to "more...", recipe_path(recipe) %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(recipe.created_at) %> ago.
  </span>
  <% if current_user?(recipe.user) %>
      <%= link_to "delete", recipe, method: :delete,
                  data: {confirm: "You sure?"},
                  title: recipe.name %>
  <% end %>
</li>