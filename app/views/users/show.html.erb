<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
    <% end %>
  </div>
  <div class="span12">
    <% if @user.recipes.any? %>
        <h3>recipes (<%= @user.recipes.count %>)</h3>
        <ol class="microposts">
          <%= render @recipes %>
        </ol>
    <% end %>
  </div>
</div> 