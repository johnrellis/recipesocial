<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info', user_info: @user %>
    </section>
    <section>
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
    <% end %>
  </div>
  <div class="span12">
    <% if @user.recipes.any? %>
        <h3>recipes (<%= @user.recipes.count %>)</h3>
        <ol class="recipes">
          <%= render @recipes %>
        </ol>
    <% end %>
  </div>
</div> 